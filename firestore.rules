rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // قواعد المنشورات
    match /posts/{postId} {
      // السماح للجميع بالقراءة لرؤية المنشورات
      allow read: if true;
      // السماح بالكتابة فقط للمستخدمين المسجلين
      allow create: if request.auth != null;
      // السماح بالتعديل أو الحذف فقط لصاحب المنشور
      allow update, delete: if request.auth != null && request.auth.token.name == resource.data.author;
    }
    
    // قواعد المستخدمين
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
